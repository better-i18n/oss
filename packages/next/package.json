{
  "name": "@better-i18n/next",
  "version": "0.5.6",
  "description": "Better-i18n Next.js integration",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/better-i18n/better-i18n.git",
    "directory": "packages/next"
  },
  "bugs": {
    "url": "https://github.com/better-i18n/better-i18n/issues"
  },
  "homepage": "https://github.com/better-i18n/better-i18n/tree/main/packages/next",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "bun": "./src/server.ts",
      "default": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "bun": "./src/client.tsx",
      "default": "./dist/client.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "bun": "./src/middleware.ts",
      "default": "./dist/middleware.js"
    },
    "./proxy": {
      "types": "./dist/proxy.d.ts",
      "bun": "./src/proxy.ts",
      "default": "./dist/proxy.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "i18n",
    "localization",
    "nextjs",
    "next-intl",
    "cdn"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@better-i18n/core": "workspace:*"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "next-intl": ">=4.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "next": "^15.4.4",
    "next-intl": "^4.5.8",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "typescript": "~5.9.2"
  }
}
