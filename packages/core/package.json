{
  "name": "@better-i18n/core",
  "version": "0.2.2",
  "description": "Framework-agnostic core utilities for Better i18n",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/better-i18n/better-i18n.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/better-i18n/better-i18n/issues"
  },
  "homepage": "https://github.com/better-i18n/better-i18n/tree/main/packages/core",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "bun": "./src/index.ts",
      "react-native": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "i18n",
    "localization",
    "internationalization",
    "cdn",
    "translations"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "~5.9.2"
  }
}