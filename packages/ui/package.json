  "description": "Reusable UI components for React Starter Kit (monorepo)",
  "type": "module",
  "main": "./index.ts",
  "types": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./lib/utils": "./lib/utils.ts",
    "./components/*": "./components/*.tsx",
    "./hooks/*": "./hooks/*.ts",
    "./lib/*": "./lib/*.ts"
