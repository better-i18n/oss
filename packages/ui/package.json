    "dev": "tsc --watch",
    "lint": "eslint . --max-warnings 0",
    "type-check": "tsc --noEmit",
    "ui:list": "bun scripts/ui-list.ts",
    "ui:update": "bun scripts/ui-update.ts",
    "ui:add": "bun scripts/ui-add.ts",
    "ui:essentials": "bun scripts/ui-essentials.ts"
